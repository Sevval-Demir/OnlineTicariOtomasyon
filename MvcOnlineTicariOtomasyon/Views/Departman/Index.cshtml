@using MvcOnlineTicariOtomasyon.Models.Sınıflar
@model List<Departman>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px">
    <tr>
        <th>ID</th>
        <th>Departman Ad</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detay</th>
    </tr>
    @foreach (var k in Model)
    {
        <tr>
            <td>
                @k.DepartmanID
            </td>
            <td>
                @k.DepartmanAd
            </td>
            <td>
                <a href="/Departman/DepartmanSil/@k.DepartmanID" class="btn btn-warning">Sil</a>
            </td>
            <td>
                <a href="/Departman/DepartmanGetir/@k.DepartmanID" class="btn btn-dark">Güncelle</a>
            </td>
            <td>
                <a href="/Departman/DepartmanDetay/@k.DepartmanID" class="btn btn-outline-warning">Detay</a>
            </td>
        </tr>
    }
</table>
<a href="/Departman/DepartmanEkle" class="btn btn-info">Departman Ekle</a>



