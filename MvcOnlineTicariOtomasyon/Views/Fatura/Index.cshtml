@using MvcOnlineTicariOtomasyon.Models.Sınıflar
@model List<Faturalar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px">
    <tr>
        <th>Seri Sıra No</th>
        <th>Vergi Dairesi</th>
        <th>Tarih</th>
        <th>Saat</th>
        <th>Toplam</th>
        <th>Teslim Eden</th>
        <th>Teslim Alan</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
        <th>Popup Liste</th>
        <th>Yeni Kalem</th>
    </tr>
    @foreach (var k in Model)
    {
        <tr>
            <td>@k.FaturaSeriNo @k.FaturaSiraNo</td>
            <td>@k.VergiDairesi</td>
            <td>@k.Tarih</td>
            <td>@k.Saat</td>
            <td>@k.ToplamTutar ₺</td>
            <td>@k.TeslimEden</td>
            <td>@k.TeslimAlan</td>
            <td>
                <a href="/Fatura/FaturaGetir/@k.FaturaID" class="btn btn-dark">Güncelle</a>
            </td>
            <td>
                <a href="/Fatura/FaturaDetay/@k.FaturaID" class="btn btn-outline-info">Detaylar</a>
            </td>
            <td>
                <a href="/Fatura/FaturaDetay/@k.FaturaID" class="btn btn-outline-secondary">Popup</a>
            </td>
            <td>
                <a href="/Fatura/FaturaDetay/@k.FaturaID" class="btn btn-outline-warning">Kalem</a>
            </td>
        </tr>
    }
</table>
<a href="/Fatura/FaturaEkle" class="btn btn-info">Fatura Ekle</a>