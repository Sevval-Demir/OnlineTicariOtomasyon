@using MvcOnlineTicariOtomasyon.Models.Sınıflar
@model List<SatisHareket>
@{
    ViewBag.Title = "Siparislerim";
    Layout = "~/Views/Shared/_CariLayout.cshtml";
}
<br />
<h2 class="mb-4">Sipariş Geçmişim</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">
        Henüz hiç siparişiniz bulunmamaktadır.
    </div>
}
else
{
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Ürün</th>
                <th>Adet</th>
                <th>Fiyat</th>
                <th>Toplam</th>
                <th>Tarih</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model)
            {
                <tr>
                    <td>@x.Urun.UrunAd</td>
                    <td>@x.Adet</td>
                    <td>@x.Fiyat ₺</td>
                    <td>@x.ToplamTutar ₺</td>
                    <td>@x.Tarih.ToString("dd.MM.yyyy")</td>
                </tr>
            }
        </tbody>
    </table>
}
