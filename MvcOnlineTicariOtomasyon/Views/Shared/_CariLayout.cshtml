@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Ticari Otomasyon | Cari Panel</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/plugins/fontawesome-free/css/all.min.css">

    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">

    <!-- AdminLTE -->
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/dist/css/adminlte.min.css">
</head>

<body class="hold-transition sidebar-mini">
<div class="wrapper">

    <!-- Navbar -->
    <nav class="main-header navbar navbar-expand navbar-dark">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" data-widget="pushmenu" href="#"><i class="fas fa-bars"></i></a>
            </li>
            <li class="nav-item d-none d-sm-inline-block">
                <a href="/CariPanel/Index" class="nav-link">Profilim</a>
            </li>
            <li class="nav-item d-none d-sm-inline-block">
                <a href="/CariPanel/Siparislerim" class="nav-link">Siparişlerim</a>
            </li>
        </ul>

        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                <a class="nav-link" href="/CariPanel/LogOut">
                    <i class="fas fa-power-off"></i>
                </a>
            </li>
        </ul>
    </nav>

    <!-- Sidebar -->
    <aside class="main-sidebar sidebar-dark-primary elevation-4">
        <a href="/CariPanel/Index" class="brand-link">
            <span class="brand-text font-weight-light">Cari Panel</span>
        </a>

        <div class="sidebar">
            <nav class="mt-2">
                <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview">

                    <li class="nav-item">
                        <a href="/CariPanel/Index" class="nav-link">
                            <i class="nav-icon fas fa-user"></i>
                            <p>Profilim</p>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a href="/CariPanel/Siparislerim" class="nav-link">
                            <i class="nav-icon fas fa-cash-register"></i>
                            <p>Siparişlerim</p>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a href="/CariPanel/Urunler" class="nav-link">
                            <i class="nav-icon fas fa-shopping-cart"></i>
                            <p>Ürünler</p>
                        </a>
                    </li>


                    <li class="nav-item">
                        <a href="/CariPanel/KargoTakip" class="nav-link">
                            <i class="nav-icon fas fa-box"></i>
                            <p>Kargo Takibi</p>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a href="/CariPanel/GelenMesajlar" class="nav-link">
                            <i class="nav-icon fas fa-envelope"></i>
                            <p>Mesajlar</p>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a href="/CariPanel/LogOut" class="nav-link">
                            <i class="nav-icon fas fa-power-off"></i>
                            <p>Çıkış Yap</p>
                        </a>
                    </li>

                </ul>
            </nav>
        </div>
    </aside>

    <!-- Content -->
    <div class="content-wrapper">
        <section class="content pt-3">
            <div class="container-fluid">
                @RenderBody()
            </div>
        </section>
    </div>

</div>

<script src="~/AdminLTE-3.0.4/plugins/jquery/jquery.min.js"></script>
<script src="~/AdminLTE-3.0.4/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="~/AdminLTE-3.0.4/dist/js/adminlte.min.js"></script>

</body>
</html>
